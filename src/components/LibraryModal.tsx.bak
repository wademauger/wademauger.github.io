import React, { Suspense, lazy } from 'react';
import { Spin } from 'antd';

// Lightweight lazy loader to isolate the heavy modal implementation and keep
// the parent render path stable (avoids hook order changes).

const LibraryModalInner = lazy(() => import('./LibraryModalInner'));

const LibraryModal = () => (
  <Suspense fallback={<div style={{ padding: 24, textAlign: 'center' }}><Spin /></div>}>
    <LibraryModalInner />
  </Suspense>
);

export default LibraryModal;
